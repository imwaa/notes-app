{{#if error}}

<div class="alert alert-dismissible alert-secondary col-md-4 mx-auto">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{error}}
</div>

{{/if}}


{{#each errors}}

<div class="alert alert-dismissible alert-secondary col-md-4 mx-auto">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{text}}
</div>


{{/each}}